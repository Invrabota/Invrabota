  <div class="wrapper">
    <div class="header">

      {% if settings.show_shop_name %}
      	<a class="account-title" href="/" title="{{ account.title }}">{{ account.title }}</a>
      {% else %}
        {% if settings.use_logo_image %}
           <a class="logo" href="/"><img src="{{ 'loaded_logo.png' | asset_url }}" title=""></a>
