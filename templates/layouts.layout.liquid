      {% endif %}
      <div style="position: absolute;top: 13px;left: 359px;width:200px;">{{ blocks.vremya-raboty.content | editable }}</div>
         <a class="cart" href="/cart_items">
            <div class="title">Список</div>
            <div class="text nn">В списке <span id="cart_items">{{cart.items_count}}</span>&nbsp;<span id="word_product">соискателей</span>
            
            </div>
        </a>

      	{% if settings.show_phone %}
          <div class="phone" itemscope itemtype="http://schema.org/Store">
      <!--      <span itemprop="telephone">{{ account.phone | editable }}</span> -->
            <span itemprop="telephone">+7(473)2660601, 2418072<br>mail@invrabota.ru</span>
            <span itemprop="name" class="hidden">{{ account.title | editable }}</span>
            <span class="hidden" itemprop="address">{{account.url}}</span>
            <a target="_blank" href="https://vk.com/club96788818"><img src="https://static-internal.insales.ru/files/1/5094/3314662/original/information_items_244.png"></a>
          </div>
        {% endif %}
      <div class="stat" style='display:block;'>
