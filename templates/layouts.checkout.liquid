         </div>


           
        <div class="menu">
            <div class="main">
              	<ul class="main-menu">
                  {% for link in linklists.main-menu.links %}
                    {% assign col_link = false %}
                  	{% for col in collections.flatten %}{% if link.url == col.url and col.subcollections.size > 0 %}
                  		{% assign col_link = true %}
                      	<li class="main-menu-item">
                          <a href="{{ link.url }}">{{ link.title }}<span class="arrow-submenu"></span></a>
                          <ul class="main-submenu">
                            {% for subcol in col.subcollections %}
                            <li class="{% if forloop.last %}last{% endif %}"><a href="{{ subcol.url }}">{{ subcol.title | editable }}</a></li>
                            {% endfor %}
                          </ul>
                    	</li>
                  	{% endif %}{% endfor %}
                    {% unless col_link %}<li class="main-menu-item"><a href="{{ link.url }}">{{ link.title }}</a></li>{% endunless %}
                  {% endfor %}
              	</ul>
              	<div class="menu-decor-wrap">
                    <div class="menu-decor"></div>
                </div>
            </div>
            <div class="search">
              	<form action="/search" method="get">
                  	<input id="search_submit" type="submit" class="submit" value="">
                	<input id="search" type="text" class="query" name="q" value="Найти...">
                </form>
            </div>
          

          
        </div>
	</div>
<div class="aside">
        <div class="categories">
            <div class="title">Каталог</div>
            <ul>
              {% for col in collections %}
              	<li>
                  <a class="{% if col.handle == collection.handle %}active{% endif %}" href="{{ col.url }}"><div class="marker {% if col.current? %}active{% endif %}"></div>{{ col.title | editable }}</a>
                    <ul class="subcollection {% if col.current? and col.subcollections.size > 0 %}expand{% endif %}">
                      {% for sub1 in col.subcollections %}
                        <li>
                            <a class="{% if sub1.handle == collection.handle %}active{% endif %}" href="{{ sub1.url }}">{{ sub1.title | editable }}</a>
                            <ul class="subcollection {% if sub1.current? and sub1.subcollections.size > 0 %}expand{% endif %}">
                               {% for sub2 in sub1.subcollections %}
                                <li>
                                  <a class="{% if sub2.handle == collection.handle %}active{% endif %}" href="{{ sub2.url }}">{{ sub2.title | editable }}</a>
                                </li>
                              	{% endfor %}
                            </ul>
                        </li>
                      {% endfor %}
                    </ul>
                </li>
              {% endfor %}
            </ul>
